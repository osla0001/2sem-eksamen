---
const { title, content } = Astro.props;
---

<div class="accordion-wrapper">
  <details class="accordion">
    <summary>
      <span class="title-text">
        <h3>{title}</h3>
      </span>
      <span class="plus_icon">+</span>
    </summary>
    <div class="content">
      <p>{content}</p>
    </div>
  </details>
</div>

<style>
  .accordion-wrapper {
    max-width: 600px;
    margin: 0 auto;
    padding: 1rem;
  }

  details.accordion {
    border: none;
    padding: 0.2rem 0;
  }

  summary {
    display: flex;
    justify-content: space-between;
    cursor: pointer;
    font-weight: bold;
    font-size: 1rem;
    margin-bottom: 0.2rem;
    border-bottom: 1px solid var(--pink);
    padding-bottom: 0.2rem;
    transition: 0.3s ease;
  }

  .plus_icon {
    margin-left: 1rem;
    font-weight: bold;
    font-size: 1.2rem;
    transition: 0.3s ease;
    color: var(--pink);
  }

  details[open] .plus_icon {
    transform: rotate(45deg);
    transition: 0.3s ease;
  }

  .content {
    padding: 0.5rem 0 0.5rem 0;
    font-size: 0.95rem;
    line-height: 1.4;
  }

  h3 {
    font-family: owners-narrow, sans-serif;
    font-size: 30px;
    font-weight: 700;
    font-style: normal;
    color: var(--pink);
  }

  .content {
    font-size: 18px;
    line-height: 1.9rem;
    color: var(--gray);
  }

  h3:hover {
    transition: 0.3s;
  }

  @media {
    (min-width: 600px;) {
      summary {
        font-size: 1.1rem;
      }
      .content {
        font-size: 1.05rem;
      }
    }
  }
</style>
