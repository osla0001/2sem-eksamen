<div class="white_space"></div>

<style>
  h2,
  h3,
  h4 {
    color: var(--pink);
    text-transform: uppercase;
  }

  h2 {
    margin-top: 2rem;
  }

  .grid_1-1-1 {
    display: grid;
    grid-template-columns: 1fr max-content 1fr max-content 1fr;
    gap: 1rem;
  }

  li {
    font-family: neue-haas-grotesk-display, sans-serif;
    font-weight: 500;
    font-style: normal;
    font-size: 18px;
    line-height: 1.7rem;
    list-style: none;
    color: var(--pink);
  }

  .line {
    width: 1px;
    height: 100%;
    background-color: var(--pink);
    height: 100%;
    margin: 0 auto;
  }

  .flex_row {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 1rem;
    width: fit-content;
    place-content: end;
    margin-top: 25px;
    margin-inline-start: auto;
  }

  a {
    text-decoration: none;
    transition: 0.3s;
  }

  .flex_row:hover {
    scale: 1.01;
    color: var(--pink);
    transition: 0.2s;
  }

  @media (max-width: 600px) {
    .grid_1-1-1 {
      grid-template-columns: 1fr;
      grid-template-rows: 1fr fit-content 1fr fit-content 1fr;
      gap: 2rem;
    }
    h2 {
      margin-top: 0rem;
    }
    .line {
      height: 1px;
      width: 100%;
      background-color: var(--pink);
      margin: 0 auto;
    }

    li {
      font-size: 15px;
    }
  }
</style>
