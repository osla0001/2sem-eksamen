<div class="card-container">
  <img src="https://placehold.co/400x400" alt="MAS" />
  <div class="hover-box">
    <div class="hover-inner">
      <img src="/assets/card-hover.svg" alt="" class="hover-svg" />
      <h2 class="hover-text">MAS<br />KL. 18.00</h2>
    </div>
  </div>
</div>

<style>
  .card-container {
    position: relative;
    display: inline-block;
    perspective: 1000px;
  }

  .card-container img {
    display: block;
    width: 100%;
    height: auto;
  }

  .hover-box {
    position: absolute;
    inset: 0;

    transition: transform 0.6s ease;
    pointer-events: none;
  }

  .card-container:hover .hover-box {
    transform: rotateX(0deg);
    backface-visibility: hidden;
    pointer-events: auto;
  }

  .hover-inner {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    box-sizing: border-box;
    transform: rotateX(-90deg);
  }

  .hover-svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    pointer-events: none;
  }

  .hover-text {
    position: relative;
    z-index: 2;
    text-align: start;
  }
</style>
