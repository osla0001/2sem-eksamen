<style>
  .filter a {
    display: flex;
    align-items: center;
    gap: 10px; /* juster afstanden efter behov */
  }
  .pulse {
    animation-name: pulse_kf;
    animation-duration: 1s;
    animation-iteration-count: infinite;
    animation-direction: alternate-reverse;
    animation-timing-function: ease-in-out;
  }

  a {
    text-decoration: none;
  }

  @keyframes pulse_kf {
    from {
      scale: 1;
    }
    to {
      scale: 0.98;
    }
  }

  header {
    display: flex;
    position: fixed;
    top: 0;
    left: 0;
    align-items: center;
    justify-content: space-between;
    width: 100vw;
    padding: 1rem 6rem;
    background-image: linear-gradient(var(--light_pink), transparent);
    z-index: 100;
  }

  header > div > ButtonText {
    filter: none !important; /* Ekskluderer ButtonText fra at arve filteret */
  }

  .logo {
    width: 50px;
    height: auto;
    aspect-ratio: 1/1;
    transition: 0.3s;
  }

  .logo:hover {
    scale: 1.05;
    transition: 0.3s;
  }

  h5 {
    font-family: owners-xwide, sans-serif;
    font-weight: 500;
    font-style: normal;
    text-transform: uppercase;
    font-size: 16px;
    color: var(--pink);
    text-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  div {
    display: flex;
    gap: 10px;
    align-items: center;
  }

  img {
    filter: drop-shadow(0 4px 6px rgba(0, 0, 0, 0.1));
  }

  @media (max-width: 1000px) {
    header {
      padding: 1rem 2rem;
    }
  }
</style>
