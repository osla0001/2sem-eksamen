---
const { url, h1, fontSize } = Astro.props;
import Header from "./Header.astro";
---

<Header />
<section class="grid_1-1-1">
  <!-- Baggrundsvideo -->
  <video autoplay muted loop playsinline class="background-video">
    <source src={url} type="video/mp4" />
  </video>

  <div class="filler"></div>
  <img src="/assets/clamp.svg" alt="Klamme illustration" class="clamp1" />
  <h1 style={`font-size: ${fontSize};`}>{h1}</h1>
  <img src="/assets/clamp.svg" alt="Klamme illustration" class="clamp2" />
  <div style="height: 2rem;"></div>
  <img
    src="/assets/bakke-divider-4.svg"
    alt="Illustration af bakke, brugt til at skille sektionerne ad"
    class="hill"
  />
</section>
<!-- <div style="height: 2rem;"></div> -->

<style>
  .grid_1-1-1 {
    position: relative;
    display: grid;
    grid-template-columns: 1fr 2fr 1fr;
    grid-template-rows: 5fr max-content;
    width: 100%;
    padding: 0 1rem;
    overflow: hidden;
  }

  .background-video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover; /* Sørger for, at videoen dækker hele sektionen */
    z-index: -1; /* Placerer videoen bag indholdet */
  }

  h1 {
    color: var(--yellow);
    text-transform: uppercase;
    place-self: center;
    text-align: center;
    margin: 0 auto;
  }

  .clamp1,
  .clamp2 {
    height: 8rem;
    place-self: center;
    align-self: center;
  }

  .clamp2 {
    transform: scaleX(-100%);
  }

  .filler {
    grid-column: 1 / span 3;
    height: 100px;
  }

  .hill {
    filter: brightness(0) saturate(100%) invert(99%) sepia(24%) saturate(7489%)
      hue-rotate(287deg) brightness(133%) contrast(113%);
    grid-column: 1 / span 3;
    margin-block-start: auto;
    width: 150%;
    height: max-content;
    margin: 0 auto;
    overflow: hidden;
    margin-bottom: -1rem;
    margin-left: -2rem;
  }

  @media (min-width: 800px) {
    .hill {
      width: 103.3%;
      overflow: hidden;
      margin-bottom: -1rem;
      margin-left: -2rem;
    }
    .h1 {
      font-size: 1rem;
    }
    .clamp1,
    .clamp2 {
      height: 20rem;
    }
  }
</style>
