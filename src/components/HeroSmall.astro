---
const { url, h1, fontSize } = Astro.props;
import Header from "./Header.astro";
---

<Header />
<section class="grid_1-1-1" style=`background-image: url(${url});`>
  <div class="filler"></div>
  <img src="/assets/Clamp.svg" alt="" class="clamp1" />
  <h1 style={`font-size: ${fontSize};`}>{h1}</h1>
  <img src="/assets/Clamp.svg" alt="" class="clamp2" />

  <img src="/assets/bakke-down_small.svg" alt="" class="hill" />
</section>
<div style="height: 2rem;"></div>

<style>
  .herosmall {
    height: 500px;
    width: 100%;
    top: 0;
    left: 0;
    z-index: -1;
    aspect-ratio: 1/1;
    overflow: hidden;
  }

  h1 {
    color: var(--yellow);
    font-size: 6rem;
    text-transform: uppercase;
    place-self: center;
    text-align: center;
    margin: 0 auto;
  }

  .grid_1-1-1 {
    display: grid;
    grid-template-columns: 1fr 3fr 1fr;
    grid-template-rows: 5fr max-content;
    width: 100%;
    padding: 0 1rem;
    background-size: cover;
    background-position: center center;
  }

  .clamp1,
  .clamp2 {
    height: 10rem;
    place-self: center;
    align-self: center;
  }

  .clamp2 {
    transform: scaleX(-100%);
  }

  .filler {
    grid-column: 1 / span 3;
    height: 100px;
  }

  .hill {
    filter: brightness(0) saturate(100%) invert(99%) sepia(24%) saturate(7489%)
      hue-rotate(287deg) brightness(133%) contrast(113%);
    grid-column: 1 / span 3;
    margin-block-start: auto;
    width: 103.3%;
    height: max-content;
    margin: 0 auto;
    rotate: 180deg;
    overflow: hidden;
    margin-bottom: -1rem;
    margin-left: -2rem;
  }

  @media (min-width: 600px) {
    .h1 {
      font-size: 1rem;
    }
    .clamp1,
    .clamp2 {
      height: 20rem;
    }
  }
</style>
