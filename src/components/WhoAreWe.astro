<style>
  section {
    background-color: var(--light_pink);
  }

  h3,
  h4,
  a {
    color: var(--grey);
    text-transform: uppercase;
  }

  h1 {
    margin-bottom: 1rem;
    color: var(--pink);
  }

  p {
    color: var(--grey);
  }

  .flex_row {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 1rem;
    width: fit-content;
    margin-top: 2rem;
    margin-bottom: 4rem;
  }
  .flex_row:hover {
    scale: 1.01;
    color: var(--pink);
    transition: 0.2s;
  }

  .grid_1-1 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }

  .text_margin {
    padding-top: 5rem;
    padding-bottom: 5rem;
  }

  a {
    text-decoration: none;
    transition: 0.3s;
  }

  @media (max-width: 800px) {
    .grid_1-1 {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>
