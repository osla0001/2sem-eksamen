    />
    <PraktiskInfoBox
      title="OFFENTLIG TRANSPORTMULIGHEDER"
      content="lorem ipsum dolor sit amet, consectetur adipisicing elit. Quisquam, voluptatibus, cumque, quibusdam, voluptates, quisquam, voluptatibus, cumque, quibusdam, voluptates, quisquam, voluptatibus, cumque, quibusdam, voluptates"
    />
    <PraktiskInfoBox
      title="DIN TRYGHED"
      content="lorem ipsum dolor sit amet, consectetur adipisicing elit. Quisquam, voluptatibus, cumque, quibusdam, voluptates, quisquam, voluptatibus, cumque, quibusdam, voluptates, quisquam, voluptatibus, cumque, quibusdam, voluptates"
    />
  </div>
</main>
<div style="height: 150px;"></div>
<!-- 
Skaber mellemrum mellem indholdet og bunden af siden -->

<style>
  .accordion-wrapper {
    text-align: left;
  }

  h1 {
    font-size: 40px;
    color: var(--pink);
    margin-bottom: 1rem;
  }
  p {
    font-size: 18px;
    line-height: 1.8rem;
    color: var(--pink);
  }

  @media (min-width: 600px) {
    .tekst_praktisk {
