    text-align: left;
  }

  h1 {
    font-size: 40px;
    color: var(--pink);
    margin-bottom: 1rem;
  }
  p {
    font-size: 18px;
    line-height: 1.8rem;
    color: var(--pink);
  }

  @media (min-width: 600px) {
    .tekst_praktisk {
      max-width: 700px;
      margin-bottom: 3rem;
    }
  }
</style>
