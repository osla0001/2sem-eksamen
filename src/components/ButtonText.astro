---
const { url, text, text_color, background_color } = Astro.props;
---

<a href={url} target="_blank" class="pulse">
  <button style=`background-color: ${background_color};`>
    <h5 style=`color: ${text_color};`>{text}</h5>
  </button>
</a>

<style>
  .pulse {
    animation-name: pulse_kf;
    animation-duration: 1s;
    animation-iteration-count: infinite;
    animation-direction: alternate-reverse;
    animation-timing-function: ease-in-out;
  }

  @keyframes pulse_kf {
    from {
      scale: 1;
    }
    to {
      scale: 0.9;
    }
  }
  button {
    border: none;
    color: inherit;
    cursor: pointer;
    font: inherit;
    padding: 2px 10px;
    border-radius: 3px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  button:hover {
    scale: 1.2;
    transition: 0.3s;
  }

  h5 {
    font-family: owners-xwide, sans-serif;
    font-weight: 500;
    font-style: normal;
    font-size: 18px;
  }
</style>
